.C2
 PH2 #C:&CR
 PH2 #C:&ERROUT
 JSL ~PUTS
 ~RESTM
 MEXIT
.D
 PEA ~L&SYSCNT|-16
 PEA ~L&SYSCNT
 LDX #$1C0C+(C:&ERROUT*256)-(512*C:&CR)
 JSL $E10000
 ~RESTM
 MEND
